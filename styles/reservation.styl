        width 32.5233%
    @media (max-width 455px)
        .reservation
            &-box
                width 32.8566%
                margin-left 0.5%
            &-select 
                width calc(100% - 25px)
                margin-left 1px
            &-list
                width calc(100% - 49px)
                margin-left 1px
        .banner-btn-within
            width 50%


