@import 'main.styl'
//Layout

//Modules
.block-on-line
    heightBlock = 22px 
    height heightBlock
    width 50%
    margin 0 25% 80px 25%
    transform translateY(-(heightBlock/2+2px))
    float left
    txt(heightBlock, 1px, bold, uppercase, grey2)
    text-align center
.reservation
    &-box
        width 17.857%
        height 24px
        float left
        margin-left 5%
        &:first-child
            margin-left 18.2145%
    &-icon, &-arrow
        width 24px
        height 100%
        float left
    &-select, &-arrow
        width calc(100% - 36px)
        height 100%
        margin-left 12px
        border none
        border-radius 1px
        background-color transparent
        border-bottom 2px solid grey3
        outline 0
        txt(12px, 0px, bold, none, grey2)
    &-list
        width calc(100% - 60px)
        height calc(100% - 5px)
        padding-top 5px
        margin-left 12px
        float left
        border-bottom 2px solid grey3
        txt(12px, 0px, bold, none, grey2)
    &-arrow
        width 24px
        margin-left 0
        margin-top 2px
.banner-btn-within
        width 17.857%
//Variables
mainHeight = 100px
monthTxtSize = 26px
yearTxtSize = monthTxtSize - 4px
.calendar
    width 100%
    height auto
    margin 50px auto
    float left
    box-shadow( 1px 1px 2px rgba(0,0,0,0.2))
    display none
    &-main
        width 100%
        height mainHeight
        position relative
        background grey2 
    &-btn-prev, &-btn-next
        position absolute
        float left
        width 30px
        height 30px
        top (mainHeight / 2) - 15px
        txt(26px, 0px, bold, none, grey)
        cursor pointer
    &-btn-prev
        left 3%
    &-btn-next
        right 3% 
        text-align right
    &-month, &-year 
        position relative
        width 200px
        margin 0 auto
        height auto
        text-align center
    &-month
        padding-top ((mainHeight - monthTxtSize - yearTxtSize) / 2)
        txt(monthTxtSize, 4px, bold, uppercase, grey)
    &-year
        txt(yearTxtSize, 2px, bold, none, grey) 
    &-daysOfWeek
        width 100%
        height 30px
        txt(15px, 0px, bold, none, grey2)
        text-align center
        background grey3
        & ul
            margin 0
            padding 0
            width 100%
            height 100%
            float left
            & li
                display block
                float left
                padding 6px 0 0 0
                width 14.285%
                height calc(100% - 6px)
                background white
    &-days
        width 100%
        height auto 
        float left
        background grey
        & ul
            margin 0
            padding 0
            width 100%
            height 100%
            float left
            & li
                display block
                float left
                padding 5px 0 0 0
                width 14.285%
                height 23px
                text-align center
                cursor pointer
                &:hover
                    color white
                    background-color grey2
                    
        &-isactive
            color white
            background-color grey2
