@import 'main.styl'
//Layout
.l-menu-nav
    width 100%
    float left
    & ul
        width 80%
        height 100%
        margin 0 auto
        padding 0
    & li 
        display inline-block
        position relative
        margin 0 2.5% 0 2.5%
        padding-bottom 30px
        z-index 2
    &-border
        width 100%
        height 2px
        position relative
        float left
        background grey3
        margin -2px 0 50px 0
        z-index 1
.l-menu
    width 60%
    float left
    margin 0 20% 50px 20%
price-f-size = 18px
.l-dish
    width 100%
    height h = 85px
    float left
    margin-bottom 50px
    &-img
        width h
        height 100%
        float left 
    &-desc
        width 'calc(100% - 270px - %s)' % h
        height 100%
        margin 0 150px 0 50px
        float left 
        & p 
            margin 20px 0 5px 0 
    &-price
        width 70px
        height 'calc(100% - %s)' % (h/2 + price-f-size/2)
        margin-top (h/2 - price-f-size/2)
        float left 
        //background blue
//Modules
.menu-meals
    &-nav
        txt(11px, 2px, 900, uppercase, grey2)
    &-title
        txt(14px, 1px, bold, none, grey2)
    &-desc
        txt(13px, 1px, normal, none, grey2)
    &-dolar
        txt(price-f-size, 1px,  bold, none, grey2)
    &-cent
        txt(price-f-size, 1px, bold, none, grey3)
    &-current //zamienić potem na kalsę stanu
        padding-bottom 30px
        border-bottom 2px solid pink
for $num in (1..15) 
    .menu-meals-dish{$num}
        @extend .center-pic
        background-image url('../images/menu-dish' + $num + '.png')
@media (max-width: 1324px) and (min-width: 1137px)
    .l-menu
        width 70%
        margin 0 15% 50px 15%
@media (max-width: 1137px) and (min-width: 997px)
    .l-menu
        width 80%
        margin 0 10% 50px 10%
    .l-dish-desc
        & p
           margin 15px 0 5px 0  
@media (max-width: 997px) and (min-width: 851px)
    .l-menu
        width 90%
        margin 0 5% 50px 5%
    .l-dish-desc
        & p
           margin 10px 0 5px 0  
@media (max-width: 850px) and (min-width: 500px)
    .l-menu
        width 96%
        margin 0 2% 50px 2%
    .l-dish-desc
        width calc(100% - 195px)
        height 100%
        margin 0 20px 0 20px
        & p
           margin 2px 0 5px 0 
@media (max-width: 500px)
    .l-menu
        width 98%
        margin 0 1% 50px 1%
    .l-menu-nav 
        & ul
            width 100%
        & li
            margin 0 1.5% 0 1.5%
    .l-dish
        height auto
        &-img
            width 85px
            height 85px
        &-desc
            width calc(100% - 160px)
            height 100%
            margin 0 10px 0 10px
            & p
                margin 2px 0 5px 0 
        &-price
            width 55px
        @media (max-width: 350px)
            .menu-meals-nav
                txt(10px, 1px, 900, uppercase, grey2)